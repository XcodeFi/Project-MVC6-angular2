@model IEnumerable<Graduation.Entities.Slider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<h2>Slide manager</h2>
<div class="col-md-2 pull-right"><a class="btn btn-primary" asp-action="Create" id="btnCreate"><b>+</b>Create New</a></div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlSlug)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <img class="img-responsive" width="100px" src="/images/cms/slides/@Html.DisplayFor(modelItem => item.ImageUrl)"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlSlug)
            </td>
            <td>
                <a class="btn btn-info btn-xs" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                <a class="btn btn-danger btn-xs"  asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
