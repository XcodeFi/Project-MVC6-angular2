@model Graduation.Entities.Blog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

<div class="row">
    <div class="col-sm-3">
        <div class="row">
            <section class="col-sm-12">
                <img src="holder.js/340x200" alt="image" id="imgId" class="img-responsive img-radio" />
                <div class="input-group">
                    <span class="input-group-btn">
                        <button id="txtUploadFile" class="btn btn-success">
                            <i class="fa fa-upload"></i>
                        </button>
                    </span>
                    <input type="file" id="files" name="UploadFile" class="form-control" />
                </div>
            </section>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="row">
            <section class="col-sm-12">
                <div class="form-group">
                    <label class="control-label">Tiêu ð? <span class="color-red">*</span></label>
                    <input type="text" class="form-control" data-bind="value: CurrentNews().Title, hasfocus: fcTitle" maxlength="150" />
                </div>
            </section>
        </div>
        <div class="row">
            <section class="col-sm-6">
                <div class="form-group">
                    <label class="control-label">Chuyên m?c <span class="color-red">*</span></label>
                    <select class="form-control" data-bind="value: CurrentNews().CateId, options: ListCategory, optionsValue: 'Id', optionsText: 'Name'"></select>
                </div>
            </section>
            <section class="col-sm-6">
                <div class="form-group">
                    <label class="control-label">Tin n?i b?t?</label>
                    <select class="form-control">
                        <option value="1">Tin n?i b?t</option>
                        <option value="0">Tin thý?ng</option>
                    </select>
                </div>
            </section>
        </div>
        <div class="row">
            <section class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Ngý?i vi?t <span class="color-red">*</span></label>
                    <input class="form-control" type="text" data-bind="value: CurrentNews().Author" maxlength="100" />
                </div>
            </section>
            <section class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Tr?ng thái</label>
                    <select class="form-control" data-bind="value: CurrentNews().Status">
                        <option value="1">Hi?n th?</option>
                        <option value="0">?n</option>
                    </select>
                </div>
            </section>
            <section class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Ki?u hi?n th?</label>
                    <select class="form-control" data-bind="value: CurrentNews().Mode">
                        <option value="1">Tin t?c</option>
                        <option value="0">H?nh ?nh</option>
                    </select>
                </div>
            </section>
        </div>
        <div class="row">
            <section class="col-sm-12">
                <div class="form-group">
                    <label class="control-label">Miêu t? tóm t?t tin (Không quá 300 k? t?)<span class="color-red">*</span></label>
                    <textarea class="form-control" data-bind="value: CurrentNews().Summary" maxlength="300"></textarea>
                </div>
            </section>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="control-label">T? khóa Seo</label>
                    <input id="Tags" type="text" class="form-control" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <section class="col-sm-12">
        <div class="form-group">
            <label class="control-label">N?i dung tin <span class="color-red">*</span></label>
            <textarea id="Content" rows="4" class="ckeditor  form-control"></textarea>
        </div>
    </section>
</div>

<div class="row">
    <section class="col-sm-6">
        <div class="form-group">
            <div class="input proview-btn-fileupload">
                <div class="fileUpload btn btn-primary">
                    <i class="glyphicon glyphicon-open"></i>
                    <span>Chèn ?nh n?i dung</span>
                    <input type="file" class="upload" id="appendToContent" multiple />
                </div>
            </div>
        </div>
    </section>
</div>

<form asp-action="Create">
        <div class="form-horizontal">
            <h4>Blog</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppicationUserId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="AppicationUserId" class="form-control" asp-items="ViewBag.AppicationUserId"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CateBlogId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="CateBlogId" class="form-control" asp-items="ViewBag.CateBlogId"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Summary" class="form-control"></textarea>
                    <span asp-validation-for="Summary" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TextSearch" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="TextSearch" class="form-control" />
                    <span asp-validation-for="TextSearch" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DateEdited" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DateEdited" class="form-control" />
                    <span asp-validation-for="DateEdited" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DatePosted" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DatePosted" class="form-control" />
                    <span asp-validation-for="DatePosted" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger" />
                </div>
            </div>
            <div class="form-inline">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="IsDeleted" />
                        <label asp-for="IsDeleted"></label>
                    </div>
                    <div class="checkbox">
                        <input asp-for="IsLocked" />
                        <label asp-for="IsLocked"></label>
                    </div>
                    <div class="checkbox">
                        <input asp-for="Status" />
                        <label asp-for="Status"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LikeNo" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="LikeNo" class="form-control" />
                    <span asp-validation-for="LikeNo" class="text-danger" />
                </div>
            </div>


            <div class="form-group">
                <label asp-for="UrlSlug" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="UrlSlug" class="form-control" />
                    <span asp-validation-for="UrlSlug" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ViewNo" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ViewNo" class="form-control" />
                    <span asp-validation-for="ViewNo" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        var editor = CKEDITOR.replace('Content', {
            customConfig: '/lib/ckeditor/config.js',
        });
    </script>
}
