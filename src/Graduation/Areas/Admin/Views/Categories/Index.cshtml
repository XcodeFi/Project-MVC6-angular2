@model IEnumerable<Graduation.Entities.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section styles{
    <link href="~/css/Admin/custom-panel.css" rel="stylesheet" />
}
<br />
<div class="panel panel-default">
    <div class="panel panel-heading">
        <div class="row">
            <div class="col-md-6"><a><Strong>Category List</Strong></a></div>
            <div class="col-md-4">
                <div class="input-group">
                    <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
                    <input class="form-control" id="txtSearch" name="q" placeholder="Search for" required>
                    <span class="input-group-btn">
                        <button onclick="return _search()" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </div>
            <div class="col-md-2 pull-right">
                <a class="btn btn-primary" asp-action="Create"><b>+</b>Create New</a>
            </div>
            @*<div class="col-md-2 pull-right"><a class="btn btn-primary" asp-action="Create" data-toggle="modal" data-target="#modalCreate" id="btnCreate"><b>+</b>Create New</a></div>*@
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Level)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Icon)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDeleted)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsMainMenu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsPublished)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UrlSlug)
                    </th>
                    <th class="text-center"><i class="fa fa-cogs"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        <i class="@Html.DisplayFor(modelItem => item.Icon)"></i>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        <img class="img-responsive" style="width:100px;" alt="@Html.DisplayFor(modelItem => item.Description)" src="/images/cms/cates/@Html.DisplayFor(modelItem => item.ImageUrl)"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsMainMenu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPublished)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UrlSlug)
                    </td>
                    <td>
                        <a class="btn btn-info btn-xs" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-success btn-xs" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a>
                        <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col col-xs-4">
                Total pages <strong id="_totalPageId"></strong> / <strong id="_totalItemId"></strong> Card items
            </div>
            <div class="col col-xs-8">
                <ul id="pagination-demo" class="pagination-sm hidden-xs pull-right"></ul>
            </div>

        </div>
    </div>
</div>
<br />